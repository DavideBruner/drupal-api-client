{
  "compilerOptions": {
    "target": "es2017",
    "outDir": "./dist",
    "module": "commonjs",
    "jsx": "react",
    "strict": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "declaration": true,
    "declarationMap": true,
  },
  "exclude": [
    "node_modules",
    "**/__mocks__/*",
    "**/__tests__/*",
    "**/*.spec.ts",
    "**/*.test.ts",
    "dist"
  ]
}